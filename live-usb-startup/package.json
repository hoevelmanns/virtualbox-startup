{
  "name": "oddyc-live-usb-starter",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/main.js",
  "dependencies": {
    "@vercel/ncc": "^0.28.3",
    "chalk": "^4.1.1",
    "fs-extra": "^9.1.0",
    "home-path": "^1.0.7",
    "listr2": "^3.8.0",
    "minimist": "^1.2.5",
    "mkdirp": "^1.0.4",
    "pkg": "^5.0.0",
    "random-mac": "^0.0.5",
    "system-commands": "^1.1.7",
    "systeminformation": "^5.6.12"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.11",
    "@types/node": "^14.14.41",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "dev": "npm run build -- -w",
    "build": "ncc build ./src/index.ts -o ./dist",
    "build:linux": "npm run build:exec latest-linux-x64 && npm run chmod",
    "build:win": "npm run build:exec latest-win-x64",
    "build:mac": "npm run build:exec latest-macos-x64",
    "build:exec": "npm run build && pkg dist/index.js --output dist/bin/vmstart --target",
    "build:all": "npm run build && npm run build:linux && npm run build:mac && npm run build:win",
    "chmod": "chmod +x dist/bin/*"
  }
}
